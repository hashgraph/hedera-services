    </Logger>
    <Logger name="com.hedera.services.queries.answering" level="warn" additivity="false">
      <AppenderRef ref="QueriesRollingFile"/>
    </Logger>

    <Logger name="com.hedera.services.legacy" level="warn" additivity="false">
